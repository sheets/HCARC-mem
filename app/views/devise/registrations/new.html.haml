.row
  .col-lg-6
    .well
      .bs-example.form-horizontal
        %h2 Sign up
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name),:validate=>true) do |f|
          = devise_error_messages!
          .form-group
            .col-lg-2.control-label= f.label :email
            .col-lg-10
              = f.email_field :email, :class=>"form-control",:autofocus => true
          .form-group
            .col-lg-2.control-label= f.label :password
            .col-lg-10
              = f.password_field :password,:class=>"form-control"
              = hidden_field_tag "userprofile[avatar]",@userprofile["avatar"]
              = hidden_field_tag "userprofile[remote_avatar_url]",@userprofile["remote_avatar_url"]
              = hidden_field_tag "userprofile[callsign]",@userprofile["callsign"]
              = hidden_field_tag "userprofile[fname]",@userprofile["fname"]
              = hidden_field_tag "userprofile[lname]",@userprofile["lname"]
              = hidden_field_tag "userprofile[add1]",@userprofile["add1"]
              / = hidden_field_tag "userprofile[addr2]",@userprofile["addr2"]
              = hidden_field_tag "userprofile[state]",@userprofile["state"]
              / = hidden_field_tag "userprofile[city]",@userprofile["city"]
              = hidden_field_tag "userprofile[zip]",@userprofile["zip"]
              = hidden_field_tag "userprofile[class_user]",@userprofile["class_user"]
              = hidden_field_tag "userprofile[efdate]",@userprofile["efdate"]
              = hidden_field_tag "userprofile[expdate]",@userprofile["expdate"]
          .form-group
            .col-lg-2.control-label=f.label :password_confirmation
            .col-lg-10
              = f.password_field :password_confirmation,:class=>"form-control"
          .form-group
            .col-lg-10.col-lg-offset-2
              =link_to "Cancel" ,"/",:class=>"btn btn-default"
              %button.btn.btn-primary{type: "submit"} Signin

