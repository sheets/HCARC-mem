.row
	.col-lg-6
		.well
			.bs-example.form-horizontal
				%form{:method=>"GET",:action=>registrations_profile_path}
					%legend Callsign
					.form-group
						.col-lg-2.control-label Callsign
						.col-lg-10
							= text_field_tag :call_sign,"", :class=>"form-control",:id=>"inputEmail",:autofocus => true,:placeholder=>"Callsign",:required=>true
					.form-group
						.col-lg-10.col-lg-offset-2
							=link_to "Skip",registrations_profile_path,:class=>"btn btn-default" 
							%button.btn.btn-primary{type: "submit"} Submit